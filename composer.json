{
    "autoload": {
        "psr-4": {
            "Lemmy\\": "src/"
        }
    },
    "require": {
        "rikudou/lemmy-api": "^0.6.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "docker-bash": "docker compose exec cardbot bash",
        "docker-build": "docker compose build",
        "docker-up": "docker compose up",
        "lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "lint-fix": "./vendor/bin/php-cs-fixer fix",
        "phpstan": "./vendor/bin/phpstan --memory-limit=1G --level=8 analyze cardbot.php src"
    }
}
